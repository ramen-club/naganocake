<h1>会員マイページ</h1>

<h3>登録情報</h3>
<%= link_to "編集する", edit_customer_path(@customer.id), class: "btn btn-primary" %>
<%= link_to "パスワードを変更する", edit_customer_password_path, class: "btn btn-primary" %>

<table class='table'>
      <tr>
    	  <th>氏名</th>
    	  <th><%= @customer.family_name %>　<%= @customer.first_name %></th>
      </tr>
      <tr>
    	  <th>カナ</th>
    	  <th><%= @customer.family_kana %>　<%= @customer.first_kana %></th>
      </tr>
      <tr>
    	  <th>郵便番号</th>
    	  <th><%= @customer.postal_code %></th>
      </tr>
      <tr>
    	  <th>住所</th>
    	  <th><%= @customer.street_address %></th>
      </tr>
      <tr>
    	  <th>電話番号</th>
    	  <th><%= @customer.tel_number %></th>
      </tr>
      <tr>
    	  <th>メールアドレス</th>
    	  <th><%= @customer.email %></th>
      </tr>
</table>

<h3>配送先</h3>
<%= link_to "一覧を見る", deliver_path(@customer.id), class: "btn btn-primary" %>

<h3>注文履歴</h3>
<%= link_to "一覧を見る", '#', class: "btn btn-primary" %>
