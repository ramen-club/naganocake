<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<div class="container">
<div class="row">

  <div class="col-xs-3">
    <!-- ジャンル検索サイドバー -->
    <%= render 'genre_search', genres: @genres %>
  </div>

  <div class="col-xs-9">
    <!-- 商品一覧を表示 -->
    <h2><%= @info %>一覧(全<%= @counts %>件)</h2><br>

    <div class="main clearfix">
      <% @items.each do |item| %>
      <% if item.genre.is_active == "有効" %>
        <div class = "AA">
          <%= link_to(item) do %>
            <%= attachment_image_tag(item, :image, :fill, 60, 60, fallback: "no_image.jpg", size:'150x100') %>
          <% end %>
          <%= item.name %>
          <%= number_with_delimiter(tax_included_price(item.price)) %>
        </div>
      <% end %>
      <% end %>
    </div>
    <%= paginate @items, class: "paginate" %>
  </div>

</div>
</div>
