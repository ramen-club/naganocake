<h2>配送先登録／一覧</h2>

<%= form_for(@deliver) do |f| %>
  <div class="field">
    <%= f.label "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code, class: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :street_address, class: "street_address" %>
  </div>

  <div class="field">
    <%= f.label "宛名" %>
    <%= f.text_field :name, class: "street_address" %>
  </div>

  <%= f.submit "登録する", class: "btn btn-success"%>
<% end %>

<table border="1">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @delivers.each do |deliver| %>
      <tr>
        <td><%= deliver.postal_code %></td>
        <td><%= deliver.street_address %></td>
        <td><%= deliver.name %></td>
        <td>
          <%= link_to "編集する", edit_deliver_path(deliver.id), class: "btn btn-primary" %>
          <%= link_to '削除する', deliver_path(deliver.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
