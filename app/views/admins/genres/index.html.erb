<h1>ジャンル追加•一覧画面</h1>


<%= form_for(genre) do |f| %>
<div>
<%= ジャンル %>
<%= f.text_field :name %>
<%=イーナム追加%>
<%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th>状態</th>
    </tr>
  </thead>
  <tbody>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= genre.is_active %></td>
      <td><%= link_to パス指定(アドミンが出来次第) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
