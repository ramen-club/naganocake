<h2>商品一覧画面</h2>

<a class = "btn btn-info rounded-circle p-0", href = "/admin/items/new">＋</a>

<div class="main clearfix">
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>商品ID</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
            <th>ステータス</th>
        </tr>
	</thead>
	<tbody>
        <% @items.each do |item| %>
		<tr>
			<td><%= item.id %></td>
			<td><%= link_to item.name, admin_item_path(item) %></td>
			<td><%= number_with_delimiter(item.price) %></td>
			<td><%= item.genre.name %></td>
			<td><%= item.sale_status %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>

<%= paginate @items, class: "paginate" %>
