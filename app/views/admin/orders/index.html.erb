<h3>注文一覧画面</h3>
<br>
<table class="table table-hover table-inverse">
   <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id)  %></td>
      <td><%= order.customer.family_name %> <%= order.customer.first_name %></td>
      <td><%= order.order_details.sum(:count) %></td>
      <td><%= order.order_status %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate(@orders) %>
