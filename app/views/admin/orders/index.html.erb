<h3>注文一覧画面</h3>
<br>
<table class="table table-hover table-inverse">
   <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.created_at, admin_order_path(order) %></td>
      <td><%= order.customer.first_name %> <%= order.customer.family_name %></td>
      <td><%= @count_total %></td>
      <td><%= order.order_status %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate(@order_details) %>
  