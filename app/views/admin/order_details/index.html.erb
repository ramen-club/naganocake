<h2>注文一覧画面</h2>

<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
        </tr>
	</thead>
	<tbody>
        <% @order_details.each do |order| %>
		<tr>
			<td><%= link_to order.created_at, admin_order_detail_path(order) %></td>
			<td><%= order.order.customer.family_name %><%= order.order.customer.first_name %></td>
			<td><%= order.count %></td>
			<td><%= order.order.order_status %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= paginate(@order_details) %>