<h2>会員詳細画面</h2>

<table class='table'>
      <tr>
        <th>顧客ID</th>
        <th>
          <%= @customer.id %>  
          <span class="badge"><%= @customer.is_active %>会員</span>
        </th>
      </tr>
      <tr>
    	  <th>氏名</th>
    	  <th><%= @customer.family_name %>　<%= @customer.first_name %></th>
      </tr>
      <tr>
    	  <th>カナ</th>
    	  <th><%= @customer.family_kana %>　<%= @customer.first_kana %></th>
      </tr>
      <tr>
    	  <th>郵便番号</th>
    	  <th><%= @customer.postal_code %></th>
      </tr>
      <tr>
    	  <th>住所</th>
    	  <th><%= @customer.street_address %></th>
      </tr>
      <tr>
    	  <th>電話番号</th>
    	  <th><%= @customer.tel_number %></th>
      </tr>
      <tr>
    	  <th>メールアドレス</th>
    	  <th><%= @customer.email %></th>
      </tr>
</table>

<%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-primary" %>
<%= link_to "注文履歴一覧を見る", '#', class: "btn btn-primary" %>
