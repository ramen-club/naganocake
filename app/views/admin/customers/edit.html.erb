<h2>会員編集画面</h2>

<%= form_for @customer, url: admin_customer_path do |f| %>
  <div class="field">
    <%= f.label "会員ID" %>
    <%= @customer.id %>
  </div>

  <div class="field">
    <%= f.label "氏名" %>
    <%= f.text_field :family_name, class: "family_name" %>
    <%= f.text_field :first_name, class: "first_name" %>
  </div>

   <div class="field">
    <%= f.label "フリガナ" %>
    <%= f.text_field :family_kana, class: "family_kana" %>
    <%= f.text_field :first_kana, class: "first_kana" %>
  </div>

  <div class="field">
    <%= f.label "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code, class: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :street_address, class: "street_address" %>
  </div>

  <div class="field">
    <%= f.label "電話番号（ハイフンなし）" %>
    <%= f.text_field :tel_number, class: "tel_number" %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, class: "email" %>
  </div>

  <div class="field">
    <%= f.label "会員ステータス" %>
      <%= f.radio_button :is_active, :有効 %>
      <%= f.label :is_active, "有効", {value: :有効, style: "display: inline-block;"} %>
      <%= f.radio_button :is_active, :退会済 %>
      <%= f.label :is_active, "退会済み", {value: :退会済, style: "display: inline-block;"} %>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存する", class: "btn btn-primary"%>
  </div>

<% end %>
