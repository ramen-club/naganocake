<h1>ジャンル追加•一覧画面</h1>

<%= form_for(@genre, url: admin_genres_path) do |f| %>
<div>
<%= "ジャンル" %>
<%= f.text_field :name %>
<%# <%=ラジオボタン%> %>
<%= f.submit %>
</div>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th>状態</th>
    </tr>
  </thead>
  <tbody>
  <%# <% binding.pry %> %><%#テストのため記入%>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= genre.is_active %></td>
      <td><%= link_to パス指定(アドミンが出来次第) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
