<h3>ジャンル追加•一覧画面</h3>
<br>
<%= form_for(@genre, url: admin_genres_path) do |f| %>
<div>
<%= "ジャンル" %>
<%= f.text_field :name %>
<%# ラジオボタン %>
<%= f.radio_button :is_active, :true %>
<%= f.label :is_active, "有効", {value: true} %>
<%= f.radio_button :is_active, :false %>
<%= f.label :is_active, "無効", {value: :false} %>
<%= f.submit "追加"%>
</div>
<% end %>

<br>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th>状態</th>
      <th colspan = "1"></th>
    </tr>
  </thead>
  <tbody>
  <%# <% binding.pry %><%#テストのため記入%>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= genre.is_active %></td>
      <td><%= link_to "編集する",edit_admin_genre_path(genre.id) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
