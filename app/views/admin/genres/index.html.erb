<h2>ジャンル追加 / 一覧画面</h2>
<br>
<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
  <div>
    <%= "ジャンル" %>
    <%= f.text_field :name %>
    <%# ラジオボタン %>
    <%= f.radio_button :is_active, "有効" %>
    <%= f.label :is_active, "有効", {value: true} %>

    <%= f.radio_button :is_active, "無効" %>
    <%= f.label :is_active, "無効", {value: :false} %>

    <%= f.submit "追加", class: "btn btn-primary" %>
  </div>
<% end %>

<br>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th>状態</th>
      <th colspan = "1"></th>
    </tr>
  </thead>
  <tbody>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= genre.is_active %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
