<!DOCTYPE html>
<html>
<head>
  <title>Naganocake</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header class="navbar clearfix navbar-fixed-top navbar-inverse">
    <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <div class="panel panel-default test">
            <div class="panel-body">
              ROGO
            </div>
          </div>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if customer_signed_in? %>
            <%= link_to 'マイページ', class: 'btn btn-default  ' %>
            <%= link_to '商品一覧', class: 'btn btn-default test' %>
            <%= link_to 'カート', class: 'btn btn-default test' %>
            <% else %>
            <span>ようこそ<% customer.name %>さん！</span>>
            <%= link_to '商品一覧', class: 'btn btn-default test' %>
            <%= link_to '新規登録', new_customer_registration_path, class: 'btn btn-default test' %>
            <%= link_to 'ログイン', new_customer_session_path, class: 'btn btn-default test' %>
            <% end %>
          </ul>
        </nav>
    </div>
  </nav>
</header>
<div class="container">
  <div class="row">
    <%= yield %>
  </div>
</div>
</body>
</html>
