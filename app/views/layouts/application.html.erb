<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="containar">
        <nav class="nav navbar-nav navbar-left">
          <span>ながのCAKE</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if customer_signed_in? %>
              <li><%= link_to 'マイページ', class: 'btn btn-default' %></li>
              <li><%= link_to '商品一覧', class: 'btn btn-default' %></li>
              <li><%= link_to 'カート', class: 'btn btn-default' %></li>
              <li><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete, class: 'btn btn-default' %></li>
            <% else %>
              <li><%= link_to '商品一覧', class: 'btn btn-default' %></li>
              <li><%= link_to '新規登録', new_customer_registration_path, class: 'btn btn-default' %></li>
              <li><%= link_to 'ログイン', new_customer_session_path, class: 'btn btn-default' %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

    <div class='body'>
      <div class='container'>
      <%= yield %>
      </div>
    </div>

  </body>

</html>
