<h2>[ 新規会員登録 ]</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "姓" %>
    <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
    <%= f.label "名" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

   <div class="field">
    <%= f.label "セイ" %>
    <%= f.text_field :family_kana, autofocus: true, autocomplete: "family_kana" %>
    <%= f.label "メイ" %>
    <%= f.text_field :first_kana, autofocus: true, autocomplete: "first_kana" %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :street_address, autofocus: true, autocomplete: "street_address" %>
  </div>

  <div class="field">
    <%= f.label "電話番号（ハイフンなし）" %>
    <%= f.text_field :tel_number, autofocus: true, autocomplete: "tel_number" %>
  </div>

  <div class="field">
    <%= f.label "パスワード（６文字以上）" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード（確認用）" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>

<h4>[ 既に登録済みの方 ]</h4>

<%= link_to "こちら", "/customers/sign_in" %>
からログインしてください。
